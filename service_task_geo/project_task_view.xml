<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="project.action_view_task" model="ir.actions.act_window">
            <field name="view_mode">kanban,tree,geoengine,form,calendar,gantt,graph</field>
        </record>

        <record model="ir.ui.view" id="geo_project_task_view_form">
            <field name="name">Add Location geo point to Project Task</field>
            <field name="model">project.task</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">
                <page string="Extra Info" position="before">
                    <page name="Map">
                        <field name="location_geo_point" colspan="4" widget="text"
                               groups="base_geoengine.group_geoengine_user,base_geoengine.group_geoengine_admin"/>
                        </field>
                    </page>
                </page>
            </field>
        </record>

        <record id="geo_project_task_view_map" model="ir.ui.view">
            <field name="name">Project Task Map View</field>
            <field name="model">project.task</field>
            <field name="arch" type="xml">
                <geoengine>
                    <field name="name" select="1"/>
                    <field name="partner_id"/>
                    <field name="analytic_account_id"/>
                    <field name="user_id"/>
                    <field name="state"/>
                </geoengine>
            </field>
        </record>

        <record id="geoengine_vector_layer_project_task" model="geoengine.vector.layer">
            <field name="geo_field_id"
                   ref="geoengine_partner.field_res_partner_geo_point"/>
            <field name="name">Tasks by User Assigned</field>
            <field eval="6" name="sequence"/>
            <field name="view_id" ref="geo_project_task_view_map"/>
            <field name="geo_repr">colored</field>
            <field eval="1" name="nb_class"/>
            <field name="attribute_field_id" ref="project.field_user_id"/>
            <field name="classification">unique</field>
            <field name="begin_color">#4B69FD</field>
        </record>

        <record id="geoengine_raster_layer_project_task" model="geoengine.raster.layer">
            <field name="raster_type">google</field>
            <field name="google_type">G_HYBRID_MAP</field>
            <field name="name">Project Task Background</field>
            <field name="view_id" ref="geo_project_task_view_map"/>
            <field eval="0" name="overlay"/>
        </record>
     </data>
</openerp>
