<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="project_task_statistic_form_view" model="ir.ui.view">
            <field name="name">project_task_statistic_form_view</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">

                <field name="date_deadline" position="before">
                    <field name="id" readonly="1" />
                </field>

                <field name="sequence" position="after">
                    <field name="day_open" />
                    <field name="day_close" />
                    <field name="working_hours_open" />
                    <field name="working_hours_close" />
                </field>

                <field name="date_last_stage_update" position="before">
                    <field name="create_date" />
                </field>

            </field>
        </record>

        <record id="view_project_task_tree_extend" model="ir.ui.view">
            <field name="name">view_project_task_tree_extend</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_tree2"/>
            <field name="arch" type="xml">

                <field name="name" position="before">
                    <field name="id" />
                </field>
                <field name="name" position="after">
                    <field name="reviewer_id"/>
                </field>
                <field name="user_id" position="before">
                    <field name="create_date" />
                </field>

            </field>
        </record>

        <record id="view_project_task_filter_extend" model="ir.ui.view">
            <field name="name">view_project_task_filter_extend</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_search_form"/>
            <field name="arch" type="xml">

                <field name="name" position="after">
                    <field name="id" />
                </field>

            </field>
        </record>

    </data>
</openerp>
