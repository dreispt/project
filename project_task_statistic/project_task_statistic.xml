<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!--PROJECT TASK FORM -->
        <record id="project_task_statistic_form_view" model="ir.ui.view">
            <field name="name">project_task_statistic_form_view</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">

                <page string="Description" position="after">
                    <page name="statistics_page" string="Statistics">
                        <group>
                            <field name="day_open" />
                            <field name="day_close" />
                            <field name="working_hours_open" />
                            <field name="working_hours_close" />

                            <button name="action_close_task_date_end" string="_Date End Update" type="object" class="oe_highlight"/>
                        </group>
                    </page>
                </page>

            </field>
        </record>
    </data>
</openerp>
