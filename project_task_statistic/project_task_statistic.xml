<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <!--PROJECT TASK FORM -->
        <record id="project_task_statistic_form_view" model="ir.ui.view">
            <field name="name">project_task_statistic_form_view</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_form2"/>
            <field name="arch" type="xml">

                <field name="date_deadline" position="before">
                    <h3><label for="id" /></h3>
                    <h3><field name="id"/></h3>
                </field>

                <page string="Extra Info" position="after">
                    <page name="statistics_page" string="Statistics">
                        <group>
                            <field name="day_open" />
                            <field name="day_close" />
                            <field name="working_hours_open" />
                            <field name="working_hours_close" />
                        </group>
                    </page>
                </page>

            </field>
        </record>

        <!-- Task tree -->
        <record model="ir.ui.view" id="project_task_tree_stats">
            <field name="name">project.task.tree.stats</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_tree2" />
            <field name="arch" type="xml">
                <field name="name" position="before">
                    <field name="id"/>
                    <field name="create_date"/>
                </field>
            </field>
        </record>

        <!-- Project Task filter -->
        <record id="view_task_search_form_stats" model="ir.ui.view">
            <field name="name">view_task_search_form_stats</field>
            <field name="model">project.task</field>
            <field name="inherit_id" ref="project.view_task_search_form"/>
            <field name="arch" type="xml">

                    <field name="name" position="before">
                        <field name="id"/>
                    </field>

           </field>
        </record>

    </data>
</openerp>
